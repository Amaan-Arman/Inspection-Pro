@model BlazeInspect.Models.Product
@{
    ViewBag.Title = "PartialViewProduct";
    Layout = null;
}

<script src="~/CRMJavaScript/Validation.js"></script>
@if (TempData["DbVarification"] == null && TempData["NetVarification"] == null)
{
        <div class="row rowspacing">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="row">
                    <div class="col-lg-4 col-md-4 col-sm-12 col-xs-12 removespace">
                        @Html.TextBoxFor(model => model.Extinguisher_ID, new { @class = "form-control fieldwidth", type = "hidden", id = "Extinguisher_ID_edit" })
                        <h5> Location </h5>
                        @Html.TextBoxFor(model => model.Location_, new { @class = "form-control fieldwidth", id = "Location_edit", @tabindex = 1 })
                        <label style="color: #ff0000; font-size: 10px;" id="Location_errormessage"></label>
                    </div>
                    <div class="col-lg-4 col-md-4 col-sm-12 col-xs-12 removespace">
                        <h5> Type </h5>
                        @Html.TextBoxFor(model => model.Type, new { @class = "form-control fieldwidth", id = "Type_edit", @tabindex = 2 })
                        <label style="color: #ff0000; font-size: 10px;" id="Type_errormessage"></label>
                    </div>
                    <div class="col-lg-4 col-md-4 col-sm-12 col-xs-12 removespace">
                        <h5> Capacity </h5>
                        @Html.TextBoxFor(model => model.Capacity, new { @class = "form-control fieldwidth", id = "Capacity_edit", @tabindex = 3 })
                        <label style="color: #ff0000; font-size: 10px;" id="Capacity_errormessage"></label>
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-4 col-md-4 col-sm-12 col-xs-12 removespace">
                        <h5> Manufacturer </h5>
                        @Html.TextBoxFor(model => model.Manufacturer, new { @class = "form-control fieldwidth", id = "Manufacturer_edit", @tabindex = 4 })
                        <label style="color: #ff0000; font-size: 10px;" id="Manufacturer_errormessage"></label>
                    </div>
                    <div class="col-lg-4 col-md-4 col-sm-12 col-xs-12 removespace">
                        <h5> Date of Manufacture </h5>
                        @Html.TextBoxFor(model => model.Date_of_Manufacture, new { type = "date", @class = "form-control fieldwidth", id = "Date_of_Manufacture_edit", @tabindex = 5 })
                        <label style="color: #ff0000; font-size: 10px;" id="Date_of_Manufacture_errormessage"></label>
                    </div>
                    <div class="col-lg-8 col-md-8 col-sm-12 col-xs-12 removespace">
                        <h5> Remarks </h5>
                        @Html.TextBoxFor(model => model.Remarks, new { @class = "form-control fieldwidth", id = "Remarks_edit", @tabindex = 7 })
                        <label style="color: #ff0000; font-size: 10px;" id="Remarks_errormessage"></label>
                    </div>
                    @*<div class="col-lg-4 col-md-4 col-sm-12 col-xs-12 removespace">
                        <h5> Status </h5>
                        @Html.TextBoxFor(model => model.Status, new { @class = "form-control fieldwidth", id = "Status_edit", @tabindex = 6 })
                        <label style="color: #ff0000; font-size: 10px;" id="Status_errormessage"></label>
                    </div>*@
                </div>
                @*<div class="row">
                </div>*@
            </div>
       </div>
}
else
{
    @Html.Partial("~/Views/Shared/PartialViewInternetConnection.cshtml")
}
<style>
    .fieldwidth {
        width: 100%;
        border-top-left-radius: 5px;
        border-bottom-left-radius: 5px;
        border-top-right-radius: 5px;
        border-bottom-right-radius: 5px;
    }
</style>