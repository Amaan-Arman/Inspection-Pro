@model BlazeInspect.Models.Question
@{
    ViewBag.Title = "PartialViewQuestion";
    Layout = null;
}

<script src="~/CRMJavaScript/Validation.js"></script>
@if (TempData["DbVarification"] == null && TempData["NetVarification"] == null)
{
    <div class="row rowspacing">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <div class="row">
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 removespace">
                    @Html.TextBoxFor(model => model.QuestionID, new { @class = "form-control fieldwidth", type = "hidden", id = "question_edit_id" })
                    <h5><strong>Question</strong> </h5>
                    @Html.TextBoxFor(model => model.QuestionText, new { @class = "form-control fieldwidth", id = "question_edit", @tabindex = 1 })
                    <label style="color: #ff0000; font-size: 10px;" id="question_errormessage"></label>
                </div>
                <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12 removespace">
                    <h5><strong>First option</strong> </h5>
                    @Html.TextBoxFor(model => model.first_opt, new { @class = "form-control fieldwidth", id = "first_edit", @tabindex = 2 })
                    <label style="color: #ff0000; font-size: 10px;" id="first_edit_errormessage"></label>
                </div>
                <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12 removespace">
                    <h5><strong>Second option</strong> </h5>
                    @Html.TextBoxFor(model => model.second_opt, new { @class = "form-control fieldwidth", id = "second_edit", @tabindex = 3 })
                    <label style="color: #ff0000; font-size: 10px;" id="second_edit_errormessage"></label>
                </div>
            </div>
        </div>
    </div>
}
else
{
    @Html.Partial("~/Views/Shared/PartialViewInternetConnection.cshtml")
}
<style>
    .fieldwidth {
        width: 100%;
        border-top-left-radius: 5px;
        border-bottom-left-radius: 5px;
        border-top-right-radius: 5px;
        border-bottom-right-radius: 5px;
    }
</style>